
#* === Agentic AI & LangGraph Configuration ===

# OpenAI API Key (required for agent execution via LangChain)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Enable LangGraph advanced tracing (true/false)
LANGCHAIN_TRACING_V2=true

# Optional: Logical name for your LangGraph project (appears in dashboards)
LANGCHAIN_PROJECT=agentic-ticket-system


#* === Vector Database Configuration (RAG) ===

# Path to FAISS vector store (local persistence)
VECTOR_DB_PATH=backend/app/rag/db


#* === GitHub Integration Settings ===

# GitHub Personal Access Token (must have read access to issues/repos)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub organization or username
GITHUB_ORG=my-org

# GitHub repository name to extract issues from
GITHUB_REPO=my-repo

# GitHub owner (if different from organization, e.g., for personal repos)
GITHUB_OWNER=my-org

# GitHub API base URL (change only if using GitHub Enterprise)
GITHUB_API_URL=https://api.github.com


#* === Backend Settings ===

# Backend server host
BACKEND_HOST=127.0.0.1

# Backend server port
BACKEND_PORT=8000

# Runtime environment: development | staging | production
ENVIRONMENT=development

# Allowed frontend origin(s) for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000


#* === Frontend Configuration ===

# URL used by the frontend to access backend API
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000


#* === Optional Testing & Debugging Flags ===

# When true, enables mocked agents and fake outputs
MOCK_MODE=false

# Logging verbosity level (debug | info | warning | error)
LOG_LEVEL=info
